<div class="col-lg-6 col-sm-6">
  <div class="card hovercard">
    <div class="card-background">
      <img class="card-bkimg" alt="" src="https://lorempixel.com/100/100/people/9/">
      <!-- http://lorempixel.com/850/280/people/9/ -->
    </div>
    <div class="useravatar">
      <% if user_signed_in? %>
      <%= image_tag current_user.gravatar_url %>
      <% else%>
      <%= image_tag("cat_animated.gif", id: "img_logo", class: "img-circle") %>
      <% end %>
    </div>
    <div class="card-info"> <span class="card-title"><%= current_user.username %></span>
    </div>
  </div>
  <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        <div class="hidden-xs">My Info</div>
      </button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
        <div class="hidden-xs" style="color: "black"">My Playlists</div>
      </button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <div class="hidden-xs">Edit Profile</div>
      </button>
    </div>
  </div>

  <div class="well">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="tab1">
        <div class="title">

          <div class="info">
          </div>
          <div class="desc"><b>Username:</b> <i><%= @user.username%></i></div>
          <div class="desc"><b>Email: </b><i><%= @user.email%></i></div>
          <div class="desc"><b>Phone: </b><i><%= @user.phone_number%></i></div>
        </div>
      </div>
      <div class="tab-pane fade in" id="tab2">
        <table class="table table-striped table-hover">
          <tr>
            <th>Playlist Name</th>
            <th>Date Created</th>
          </tr>
          <% if @my_playlists %>
          <% @my_playlists.each do |my_playlist| %>
          <tr>
          <th style="color: #F9F9F9;"><%= link_to my_playlist.name, my_playlist, { style: 'color:#0c0b0b;', class: "playlist_link"} %></th>
            <th><%= my_playlist.created_at.to_formatted_s(:long)%></th>
          </tr>
          <% end %>
          <% end %>

        </table>
      </div>
      <div class="tab-pane fade in" id="tab3">
        <div class="edit_form"><%= link_to 'Edit My Profile Information', edit_user_registration_path %></div>
      </div>
    </div>
  </div>

</div>
